<nav class="fixed top-0 left-0 w-full bg-[#F8FFF8] shadow-sm z-50 transition-all duration-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Brand -->
      <div class="flex items-center">
        <a href="/inside/peminjaman" class="flex items-center gap-3">
          <img
            src="/images/Perpustakaan Unand.jpg"
            alt="SiBuDi Logo"
            class="w-10 h-10 rounded"
          />
          <span class="text-2xl font-bold text-[#2F7A33] tracking-tight">
            SIBUDI - Sistem Peminjaman Buku Mandiri
          </span>
        </a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/inside/peminjaman"
          class="nav-link text-gray-700 hover:text-[#2F7A33] font-medium transition"
          data-name="Peminjaman"
        >
          Peminjaman
        </a>
        <a
          href="/inside/about"
          class="nav-link text-gray-700 hover:text-[#2F7A33] font-medium transition"
          data-name="About"
        >
          About
        </a>
      </div>

      <!-- Profile / Logout -->
      <div class="hidden md:flex items-center space-x-4">
        <% if (user) { %>
          <span class="text-gray-700">
            <strong><%= user.realname || user.username || user.id %></strong>
          </span>
          <button
            id="btn-logout-desktop"
            class="px-4 py-1 bg-[#2F7A33] text-white rounded-lg text-sm font-medium hover:bg-[#256328] transition"
          >
            Logout
          </button>
        <% } else { %>
          <a
            href="/login"
            class="px-4 py-1 bg-[#FFD700] text-[#2F7A33] rounded-lg text-sm font-medium hover:bg-yellow-400 transition"
          >
            Login
          </a>
        <% } %>
      </div>

      <!-- Mobile Menu Toggle -->
      <div class="md:hidden flex items-center">
        <button
          id="nav-inside-toggle"
          aria-label="Toggle menu"
          class="p-2 rounded-md text-[#2F7A33] focus:outline-none focus:ring-2 focus:ring-[#FFD700]"
        >
          <svg
            class="w-7 h-7"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Sidebar Menu -->
  <div
    id="nav-inside-menu"
    class="fixed top-0 right-0 h-full w-3/4 bg-[#F8FFF8] shadow-lg transform translate-x-full transition-transform duration-300 ease-in-out md:hidden"
  >
    <div class="flex flex-col h-full justify-between">
      <div class="p-6 space-y-6">
        <div class="flex justify-between items-center">
          <h2 class="text-2xl font-bold text-[#2F7A33]">SIBUDI </h2>
          <button id="nav-inside-close" class="text-[#2F7A33] focus:outline-none">
            <svg
              class="w-7 h-7"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <div class="flex flex-col space-y-4 mt-8">
          <a href="/inside/peminjaman" class="nav-link-mobile text-gray-800 text-lg font-medium hover:text-[#2F7A33] transition" data-name="Peminjaman">Peminjaman</a>
          <a href="/inside/about" class="nav-link-mobile text-gray-800 text-lg font-medium hover:text-[#2F7A33] transition" data-name="About">About</a>
        </div>
      </div>

      <div class="p-6 border-t">
        <% if (user) { %>
          <div class="mb-3 text-gray-700">
            <strong><%= user.realname || user.username || user.id %></strong>
          </div>
          <button
            id="btn-logout-mobile"
            class="block w-full text-center py-2 bg-[#2F7A33] text-white font-bold rounded-lg hover:bg-[#256328] transition"
          >
            Logout
          </button>
        <% } else { %>
          <a
            href="/login"
            class="block w-full text-center py-2 bg-[#FFD700] text-[#2F7A33] font-bold rounded-lg hover:bg-yellow-400 transition"
          >
            Login
          </a>
        <% } %>
      </div>
    </div>
  </div>

  <style>
    .nav-active {
      color: #2f7a33 !important;
      font-weight: 600;
      position: relative;
    }
    .nav-active::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      right: 0;
      height: 2px;
      background-color: #ffd700;
      border-radius: 2px;
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // Sidebar mobile toggle
      const toggleBtn = document.getElementById("nav-inside-toggle");
      const closeBtn = document.getElementById("nav-inside-close");
      const menu = document.getElementById("nav-inside-menu");

      toggleBtn?.addEventListener("click", () => {
        menu.classList.remove("translate-x-full");
      });

      closeBtn?.addEventListener("click", () => {
        menu.classList.add("translate-x-full");
      });

      // Highlight aktif link
      const activeName = "<%= typeof activeNav !== 'undefined' ? activeNav : '' %>";
      document.querySelectorAll(".nav-link, .nav-link-mobile").forEach((link) => {
        const name = link.dataset.name;
        if (name.toLowerCase() === activeName.toLowerCase()) {
          link.classList.add("nav-active");
        }
      });

      // Logout button handlers
      const btnLogoutDesktop = document.getElementById("btn-logout-desktop");
      const btnLogoutMobile = document.getElementById("btn-logout-mobile");
      const logoutModal = document.getElementById("logout-modal");
      const btnCloseModal = document.getElementById("btn-close-modal");
      const btnCancelLogout = document.getElementById("btn-cancel-logout");
      const btnConfirmLogout = document.getElementById("btn-confirm-logout");
      const passwordInput = document.getElementById("logout-password");
      const errorMsg = document.getElementById("logout-error-msg");

      // Open modal
      const openModal = () => {
        logoutModal?.classList.remove("hidden");
        passwordInput.value = "";
        errorMsg.classList.add("hidden");
        passwordInput.focus();
      };

      // Close modal
      const closeModal = () => {
        logoutModal?.classList.add("hidden");
        passwordInput.value = "";
        errorMsg.classList.add("hidden");
      };

      btnLogoutDesktop?.addEventListener("click", openModal);
      btnLogoutMobile?.addEventListener("click", openModal);
      btnCloseModal?.addEventListener("click", closeModal);
      btnCancelLogout?.addEventListener("click", closeModal);

      // Handle logout confirmation
      btnConfirmLogout?.addEventListener("click", async () => {
        const password = passwordInput.value.trim();

        if (!password) {
          errorMsg.textContent = "Password harus diisi!";
          errorMsg.classList.remove("hidden");
          return;
        }

        // Disable button
        btnConfirmLogout.disabled = true;
        btnConfirmLogout.textContent = "Memproses...";

        try {
          const response = await fetch("/logout-validate", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ password }),
          });

          const data = await response.json();

          if (data.success) {
            window.location.href = data.redirect || "/login";
          } else {
            errorMsg.textContent = data.message || "Password salah!";
            errorMsg.classList.remove("hidden");
            btnConfirmLogout.disabled = false;
            btnConfirmLogout.textContent = "Logout";
          }
        } catch (error) {
          console.error("Error:", error);
          errorMsg.textContent = "Terjadi kesalahan. Silakan coba lagi.";
          errorMsg.classList.remove("hidden");
          btnConfirmLogout.disabled = false;
          btnConfirmLogout.textContent = "Logout";
        }
      });

      // Handle Enter key
      passwordInput?.addEventListener("keypress", (e) => {
        if (e.key === "Enter") {
          btnConfirmLogout?.click();
        }
      });
    });
  </script>
</nav>

<!-- Modal Konfirmasi Logout -->
<div id="logout-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-[100] flex items-center justify-center p-4">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative">
    <!-- Close button -->
    <button id="btn-close-modal" class="absolute top-4 right-4 text-gray-400 hover:text-gray-600">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Modal content -->
    <div class="text-center mb-6">
      <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100 mb-4">
        <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Konfirmasi Logout</h3>
      <p class="text-sm text-gray-600 mb-4">Masukkan password Anda untuk logout dari sistem kios</p>
    </div>

    <!-- Password input -->
    <div class="mb-4">
      <label for="logout-password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
      <input
        type="password"
        id="logout-password"
        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#2F7A33] focus:border-transparent"
        placeholder="Masukkan password Anda"
      />
    </div>

    <!-- Error message -->
    <div id="logout-error-msg" class="hidden mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-lg text-sm">
      Password salah!
    </div>

    <!-- Action buttons -->
    <div class="flex gap-3">
      <button
        id="btn-cancel-logout"
        class="flex-1 px-4 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300 transition"
      >
        Batal
      </button>
      <button
        id="btn-confirm-logout"
        class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 transition"
      >
        Logout
      </button>
    </div>
  </div>
</div>
