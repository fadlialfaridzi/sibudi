<%- include('../partials/header-simple') %>

<!-- Link ke animasi 3D CSS -->
<link rel="stylesheet" href="/css/animasi3d.css">

<body class="bg-white min-h-screen flex flex-col">
  <!-- Navbar -->
  <%- include('../partials/navbarOutside') %>

  <!-- ======================
       KONTEN UTAMA DASHBOARD
  ======================= -->
  <main class="flex flex-col items-center justify-center min-h-screen p-4 lg:p-10 gap-6 lg:gap-10 max-w-screen-2xl mx-auto w-full pt-24 lg:pt-32">
    
    <!-- ======================
         LOGO BUKU (PALING ATAS)
    ======================= -->
    <section class="flex justify-center">
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-br from-green-300 to-green-500 blur-3xl rounded-full opacity-20 scale-110 transition-all duration-700 group-hover:opacity-30 group-hover:scale-125"></div>
        
        <img 
          src="/images/buku1.png" 
          alt="Logo SIBUDI"
          class="hero-tilt relative w-32 h-40 lg:w-48 lg:h-60 object-contain transition-all duration-500 ease-out group-hover:scale-105 animate-float"
          style="filter: drop-shadow(0 20px 40px rgba(21, 128, 61, 0.25));"
        />
      </div>
    </section>

    <!-- ======================
         BRANDING & TITLE
    ======================= -->
    <section class="w-full flex flex-col items-center text-center space-y-0">
      <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 tracking-tight">
        SIBUDI
      </h1>
      
      <p class="text-base lg:text-lg text-gray-600 max-w-sm mx-auto">
        Sistem Peminjaman Buku Mandiri
      </p>
      
      <p class="text-sm text-gray-500 max-w-md mx-auto">
        Kelola peminjaman buku Anda dengan mudah dan cepat. Perpanjang, cek denda, dan pantau status peminjaman dalam satu tempat.
      </p>
    </section>

    <!-- ======================
         STATISTIK: 2 Cards dengan Link & Animasi
    ======================= -->
    <section class="w-full max-w-2xl">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
        
        <!-- Card 1: Buku Dipinjam (Link ke Perpanjangan) -->
        <a href="/outside/perpanjangan" class="block group">
          <div class="card-3d bg-gradient-to-br from-white to-green-50 rounded-2xl p-6 lg:p-8 border border-green-100 transition-all duration-300 cursor-pointer hover:border-green-300 animate-float">
            <div class="flex flex-col items-center space-y-3 lg:space-y-4">
              <!-- Icon -->
              <div class="w-14 h-14 lg:w-16 lg:h-16 rounded-2xl bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300 group-hover:scale-110">
                <i class="fa-solid fa-book text-2xl lg:text-3xl text-white"></i>
              </div>
              
              <!-- Angka & Label -->
              <div class="text-center">
                <p class="text-4xl lg:text-5xl font-bold text-green-600 mb-2 group-hover:scale-110 transition-transform">
                  <%= totalLoans || 0 %>
                </p>
                <p class="text-sm lg:text-base text-gray-700 font-semibold">Buku Dipinjam</p>
                <p class="text-xs text-gray-500 mt-1">Klik untuk detail</p>
              </div>
            </div>
          </div>
        </a>
        
        <!-- Card 2: Total Denda (Link ke Denda) -->
        <a href="/outside/denda" class="block group">
          <div class="card-3d bg-gradient-to-br from-white to-yellow-50 rounded-2xl p-6 lg:p-8 border border-yellow-100 transition-all duration-300 cursor-pointer hover:border-yellow-300 animate-float" style="animation-delay: 0.2s;">
            <div class="flex flex-col items-center space-y-3 lg:space-y-4">
              <!-- Icon -->
              <div class="w-14 h-14 lg:w-16 lg:h-16 rounded-2xl bg-gradient-to-br from-yellow-500 to-yellow-600 flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow duration-300 group-hover:scale-110">
                <i class="fa-solid fa-coins text-2xl lg:text-3xl text-white"></i>
              </div>
              
              <!-- Angka & Label -->
              <div class="text-center">
                <p class="text-3xl lg:text-4xl font-bold text-yellow-600 mb-2 leading-tight group-hover:scale-110 transition-transform">
                  Rp <%= (totalFines || 0).toLocaleString('id-ID') %>
                </p>
                <p class="text-sm lg:text-base text-gray-700 font-semibold">Total Denda</p>
                <p class="text-xs text-gray-500 mt-1">Klik untuk detail</p>
              </div>
            </div>
          </div>
        </a>
        
      </div>
    </section>

    <!-- ======================
         INFO TEXT (Opsional)
    ======================= -->
    <section class="text-center max-w-lg mx-auto">
      <p class="text-xs text-gray-400 italic">
        Tap/klik pada card untuk melihat detail informasi
      </p>
    </section>

  </main>

  <!-- Popup -->
  <%- include('../partials/popup', { popup: popup }) %>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script src="/js/popup.js"></script>
</body>

<%- include('../partials/footer-simple') %>