<%- include('../partials/header-simple') %>

<!-- Link ke animasi 3D CSS -->
<link rel="stylesheet" href="/css/animasi3d.css">

<body class="bg-gradient-to-br from-green-50 via-white to-yellow-50 min-h-screen flex flex-col">
  <!-- Navbar -->
  <%- include('../partials/navbarOutside') %>

  <!-- ======================
       KONTEN UTAMA DASHBOARD
  ======================= -->
  <main class="flex flex-col items-center justify-center min-h-screen p-4 lg:p-10 gap-6 lg:gap-10 max-w-screen-2xl mx-auto w-full pt-24 lg:pt-32">
    
    <!-- ======================
         LOGO BUKU (PALING ATAS)
    ======================= -->
    <section class="flex justify-center">
      <div class="relative group">
        <div class="absolute inset-0 bg-gradient-to-br from-green-300 to-green-500 blur-3xl rounded-full opacity-20 scale-110 transition-all duration-700 group-hover:opacity-30 group-hover:scale-125"></div>
        
        <img 
          src="/images/buku1.png" 
          alt="Logo SIBUDI"
          class="hero-tilt relative w-32 h-40 lg:w-48 lg:h-60 object-contain transition-all duration-500 ease-out group-hover:scale-105 animate-float"
          style="filter: drop-shadow(0 20px 40px rgba(21, 128, 61, 0.25));"
        />
      </div>
    </section>

    <!-- ======================
         BRANDING & TITLE
    ======================= -->
    <section class="w-full flex flex-col items-center text-center space-y-2">
      <h1 class="text-4xl lg:text-6xl font-bold text-[#2F7A33] tracking-tight">
        SIBUDI
      </h1>
      
      <p class="text-base lg:text-lg text-gray-700 font-medium max-w-sm mx-auto">
        Sistem Peminjaman Buku Mandiri
      </p>
      
      <p class="text-sm text-gray-500 max-w-md mx-auto">
        Kelola peminjaman buku Anda dengan mudah dan cepat
      </p>
    </section>

    <!-- ======================
         STATISTIK: 2 Cards (Buku & Denda)
    ======================= -->
    <section class="w-full max-w-2xl">
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 lg:gap-6">
        
        <!-- Card 1: Buku Dipinjam -->
        <div class="card-3d bg-gradient-to-br from-white to-green-50 rounded-2xl p-6 lg:p-8 border-2 border-green-200 transition-all duration-300 animate-float">
          <div class="flex flex-col items-center space-y-3 lg:space-y-4">
            <!-- Icon -->
            <div class="w-14 h-14 lg:w-16 lg:h-16 rounded-2xl bg-gradient-to-br from-green-500 to-green-600 flex items-center justify-center shadow-lg">
              <i class="fa-solid fa-book text-2xl lg:text-3xl text-white"></i>
            </div>
            
            <!-- Angka & Label -->
            <div class="text-center">
              <p class="text-4xl lg:text-5xl font-bold text-green-600 mb-1">
                <%= totalLoans || 0 %>
              </p>
              <p class="text-sm lg:text-base text-gray-700 font-semibold">Buku Dipinjam</p>
              <p class="text-xs text-gray-500 mt-1">Aktif saat ini</p>
            </div>
          </div>
        </div>
        
        <!-- Card 2: Total Denda -->
        <div class="card-3d bg-gradient-to-br from-white to-yellow-50 rounded-2xl p-6 lg:p-8 border-2 border-yellow-200 transition-all duration-300 animate-float" style="animation-delay: 0.2s;">
          <div class="flex flex-col items-center space-y-3 lg:space-y-4">
            <!-- Icon -->
            <div class="w-14 h-14 lg:w-16 lg:h-16 rounded-2xl bg-gradient-to-br from-yellow-500 to-yellow-600 flex items-center justify-center shadow-lg">
              <i class="fa-solid fa-coins text-2xl lg:text-3xl text-white"></i>
            </div>
            
            <!-- Angka & Label -->
            <div class="text-center">
              <p class="text-3xl lg:text-4xl font-bold text-yellow-600 mb-1 leading-tight">
                Rp <%= (totalFines || 0).toLocaleString('id-ID') %>
              </p>
              <p class="text-sm lg:text-base text-gray-700 font-semibold">Total Denda</p>
              <p class="text-xs text-gray-500 mt-1">
                <% if (totalFines > 0) { %>
                  <span class="text-red-600 font-semibold">Perlu dibayar</span>
                <% } else { %>
                  <span class="text-green-600 font-semibold">Lunas</span>
                <% } %>
              </p>
            </div>
          </div>
        </div>
        
      </div>
    </section>

    <!-- ======================
         QUICK ACTION BUTTONS (2 TOMBOL UTAMA)
    ======================= -->
    <section class="w-full max-w-2xl">
      <h2 class="text-xl lg:text-2xl font-bold text-gray-800 text-center mb-6">
        <i class="fa-solid fa-bolt text-yellow-500 mr-2"></i>
        Aksi Cepat
      </h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        
        <!-- Button 1: Aturan Peminjaman -->
        <a href="/outside/rulesPinjam" class="block group">
          <div class="card-3d bg-gradient-to-br from-blue-50 to-indigo-50 hover:from-blue-100 hover:to-indigo-100 rounded-2xl p-8 border-2 border-blue-200 hover:border-blue-400 transition-all duration-300 cursor-pointer h-full">
            <div class="flex flex-col items-center text-center space-y-4 h-full justify-between">
              
              <!-- Icon dengan Animasi -->
              <div class="relative">
                <div class="absolute inset-0 bg-blue-400 rounded-2xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity"></div>
                <div class="relative w-20 h-20 rounded-2xl bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center shadow-lg group-hover:shadow-xl group-hover:scale-110 transition-all duration-300">
                  <i class="fa-solid fa-scale-balanced text-4xl text-white"></i>
                </div>
              </div>
              
              <!-- Text -->
              <div class="flex-1 flex flex-col justify-center">
                <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-blue-700 transition-colors">
                  Aturan Peminjaman
                </h3>
                <p class="text-sm text-gray-600">
                  Lihat ketentuan denda & perpanjangan
                </p>
              </div>
              
              <!-- Arrow Icon -->
              <div class="flex items-center gap-2 text-blue-600 font-semibold text-sm group-hover:gap-3 transition-all">
                <span>Lihat Detail</span>
                <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
              </div>
            </div>
          </div>
        </a>
        
        <!-- Button 2: Detail Peminjaman & Perpanjangan -->
        <a href="/outside/detailPinjam" class="block group">
          <div class="card-3d bg-gradient-to-br from-green-50 to-emerald-50 hover:from-green-100 hover:to-emerald-100 rounded-2xl p-8 border-2 border-green-200 hover:border-green-400 transition-all duration-300 cursor-pointer h-full">
            <div class="flex flex-col items-center text-center space-y-4 h-full justify-between">
              
              <!-- Icon dengan Animasi -->
              <div class="relative">
                <div class="absolute inset-0 bg-green-400 rounded-2xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity"></div>
                <div class="relative w-20 h-20 rounded-2xl bg-gradient-to-br from-green-500 to-emerald-600 flex items-center justify-center shadow-lg group-hover:shadow-xl group-hover:scale-110 transition-all duration-300">
                  <i class="fa-solid fa-clock-rotate-left text-4xl text-white"></i>
                </div>
              </div>
              
              <!-- Text -->
              <div class="flex-1 flex flex-col justify-center">
                <h3 class="text-xl font-bold text-gray-800 mb-2 group-hover:text-green-700 transition-colors">
                  Detail & Perpanjangan
                </h3>
                <p class="text-sm text-gray-600">
                  Cek status buku & perpanjang peminjaman
                </p>
              </div>
              
              <!-- Arrow Icon -->
              <div class="flex items-center gap-2 text-green-600 font-semibold text-sm group-hover:gap-3 transition-all">
                <span>Kelola Buku</span>
                <i class="fa-solid fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
              </div>
            </div>
          </div>
        </a>
        
      </div>
      
      <!-- Info Text -->
      <p class="text-center text-xs text-gray-400 italic mt-4">
        <i class="fa-solid fa-info-circle mr-1"></i>
        Klik tombol di atas untuk mengakses fitur lengkap
      </p>
    </section>

    <!-- ======================
         INFO TEXT (Opsional)
    ======================= -->
  </main>

  <!-- Popup -->
  <% if (typeof popup !== 'undefined' && popup) { %>
    <%- include('../partials/popup', { popup: popup }) %>
  <% } %>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
</body>

<%- include('../partials/footer-simple') %>