<!DOCTYPE html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title || 'Informasi Denda - SiBuDi' %></title>
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="/css/output.css" />
        <script src="https://unpkg.com/preline/dist/preline.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
    </head>
    <body class="bg-gray-50 font-inter">
        <!-- Navbar -->
        <%- include('../partials/navbarOutside', { activeNav: 'Denda', user: member }) %>

        <!-- Main Wrapper -->
        <div class="min-h-screen pt-20">
            <!-- Header -->
            <div class="bg-white border-b border-gray-200">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
                    <h1 class="text-2xl font-bold text-gray-900">Detail Denda</h1>
                    <p class="text-sm text-gray-600 mt-1">Informasi denda aktif Anda</p>
                </div>
            </div>

            <!-- Main Content -->
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 grid grid-cols-1 lg:grid-cols-4 gap-8">
                <!-- Ringkasan Denda -->
                <div class="lg:col-span-3 space-y-6">
                    <div class="bg-gradient-to-r from-green-500 to-green-600 rounded-lg shadow-lg p-6">
                        <h2 class="text-white text-lg font-semibold mb-2">Total Denda</h2>
                        <p class="text-white text-3xl font-bold">Rp <%= totalFines.toLocaleString('id-ID') %></p>
                        <p class="text-green-100 text-sm mt-1"><%= fines.length %> transaksi denda</p>
                    </div>

                    <!-- Tabel Denda -->
                    <div class="bg-white shadow-md rounded-lg overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Judul Buku</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tanggal Pinjam</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Jatuh Tempo</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tanggal Denda</th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Nominal</th>
                                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">Status</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% if (fines.length > 0) { %> <% fines.forEach(fine => { %>
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 text-sm text-gray-900"><%= fine.book_title || '-' %></td>
                                    <td class="px-6 py-4 text-sm text-gray-900"><%= fine.loan_date ? new Date(fine.loan_date).toLocaleDateString('id-ID') : '-' %></td>
                                    <td class="px-6 py-4 text-sm text-gray-900"><%= fine.due_date ? new Date(fine.due_date).toLocaleDateString('id-ID') : '-' %></td>
                                    <td class="px-6 py-4 text-sm text-gray-900"><%= fine.fines_date ? new Date(fine.fines_date).toLocaleDateString('id-ID') : '-' %></td>
                                    <td class="px-6 py-4 text-sm font-semibold text-red-600 text-right">Rp <%= fine.debet.toLocaleString('id-ID') %></td>
                                    <td class="px-6 py-4 text-center">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"> Belum Lunas </span>
                                    </td>
                                </tr>
                                <% }) %> <% } else { %>
                                <tr>
                                    <td colspan="4" class="px-6 py-4 text-center text-gray-500">Tidak ada denda aktif</td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Profil User -->
                <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                    <img src="/images/profile-avatar.jpg" alt="Profile" class="mx-auto h-20 w-20 rounded-full object-cover border-2 border-gray-200" />
                    <h3 class="mt-4 text-lg font-semibold text-gray-900"><%= member.member_name %></h3>
                    <p class="text-sm text-gray-500"><%= member.member_id %></p>
                    <p class="mt-4 text-xs text-gray-400 italic">* Denda per hari: Rp 1.000</p>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <%- include('../partials/footer-simple') %>
    </body>
</html>
