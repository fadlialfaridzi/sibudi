<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title>Mode Kios - Peminjaman Buku</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
    <!-- Preline UI CSS -->
    <link href="https://cdn.jsdelivr.net/npm/preline@1.0.0/dist/preline.min.css" rel="stylesheet"/>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
      body {
        background-color: #F0F8F0;
        font-family: 'Inter', sans-serif;
      }

      /* Warna utama */
      .bg-primary {
        background-color: #2E7D32;
      }

      .text-primary {
        color: #2E7D32;
      }

      .border-primary {
        border-color: #2E7D32;
      }

      /* Warna sekunder */
      .bg-secondary {
        background-color: #FFD700;
      }

      .text-secondary {
        color: #FFD700;
      }

      /* Hover efek */
      .hover-primary:hover {
        background-color: #256828;
      }

      .hover-secondary:hover {
        background-color: #e6c200;
      }

      /* Efek hover interaktif */
      .service-item {
        transition: all 0.3s ease;
      }
      .service-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(47, 122, 51, 0.15);
        background-color: #f8fff8;
      }
      .service-number {
        background-color: #2E7D32;
      }
      .service-item:hover .service-number {
        background-color: #FFD700;
        color: #2E7D32;
      }
    </style>
  </head>

  <body class="min-h-screen">

    <!-- ========================== -->
    <!-- Header -->
    <!-- ========================== -->
    <header class="bg-primary text-white shadow-lg">
      <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold">SIBUDI - Sistem Peminjaman Buku Mandiri Unand</h1>
          <p class="text-green-100 text-sm mt-1">
            Pustakawan: <strong><%= user.realname || user.id %></strong>
          </p>
        </div>
        <a href="/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-lg transition duration-200 text-sm font-semibold">
          <i class="fas fa-sign-out-alt mr-2"></i>Logout
        </a>
      </div>
    </header>

    <!-- ========================== -->
    <!-- Main Content -->
    <!-- ========================== -->
    <main class="container mx-auto px-6 py-8">

      <!-- Step 1 -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-6 service-item">
        <div class="flex items-center mb-6">
          <div class="service-number rounded-full p-3 mr-4 text-white">
            <i class="fas fa-barcode text-2xl"></i>
          </div>
          <div>
            <h2 class="text-xl font-bold text-primary">Langkah 1: Scan Kode Buku</h2>
            <p class="text-gray-600 text-sm">Gunakan scanner barcode atau ketik manual</p>
          </div>
        </div>

        <form id="scanForm" class="space-y-4">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Kode Buku / Item Code</label>
            <div class="flex gap-3">
              <input 
                type="text" 
                id="itemCodeInput" 
                name="item_code"
                placeholder="Contoh: BK001234"
                class="flex-1 px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
                autofocus
              >
              <button 
                type="submit" 
                class="bg-primary hover-primary text-white px-8 py-3 rounded-lg font-semibold transition duration-200 flex items-center gap-2"
              >
                <i class="fas fa-search"></i>
                Cari Buku
              </button>
            </div>
          </div>
        </form>
      </div>

      <!-- Step 2 -->
      <div id="bookInfoSection" class="bg-white rounded-xl shadow-lg p-8 mb-6 hidden service-item">
        <div class="flex items-center mb-6">
          <div class="bg-secondary rounded-full p-3 mr-4 text-primary">
            <i class="fas fa-book text-2xl"></i>
          </div>
          <div>
            <h2 class="text-xl font-bold text-primary">Langkah 2: Informasi Buku</h2>
            <p class="text-gray-600 text-sm">Buku ditemukan dan siap dipinjam</p>
          </div>
        </div>

        <div class="flex gap-6">
          <div class="flex-shrink-0">
            <img id="bookCover" src="/images/buku.png" alt="Cover Buku" class="w-32 h-44 object-cover rounded-lg shadow-md border-2 border-gray-200">
          </div>

          <div class="flex-1">
            <h3 id="bookTitle" class="text-2xl font-bold text-primary mb-2">-</h3>
            <p class="text-gray-600 mb-1"><strong>Penulis:</strong> <span id="bookAuthor">-</span></p>
            <p class="text-gray-600 mb-1"><strong>Tahun Terbit:</strong> <span id="bookYear">-</span></p>
            <p class="text-gray-600 mb-4"><strong>Kode Buku:</strong> <span id="bookCode">-</span></p>
            
            <button 
              id="btnOpenAuth" 
              class="bg-secondary hover-secondary text-primary px-6 py-3 rounded-lg font-semibold transition duration-200 flex items-center gap-2"
            >
              <i class="fas fa-user-check"></i>
              Lanjutkan Peminjaman
            </button>
          </div>
        </div>
      </div>
    </main>

    <!-- ========================== -->
    <!-- Modal: Autentikasi -->
    <!-- ========================== -->
    <div id="authModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
      <div class="bg-white rounded-xl shadow-2xl w-full max-w-md mx-4 overflow-hidden">
        <div class="bg-primary text-white p-6">
          <h3 class="text-xl font-bold flex items-center gap-2">
            <i class="fas fa-user-lock"></i> Autentikasi Peminjam
          </h3>
          <p class="text-green-100 text-sm mt-1">Masukkan NIM dan Password peminjam</p>
        </div>

        <form id="authForm" class="p-6 space-y-4">
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">NIM Peminjam</label>
            <input 
              type="text" 
              id="borrowerNim" 
              placeholder="Contoh: 241011234"
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
              required
            >
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2">Password</label>
            <input 
              type="password" 
              id="borrowerPassword" 
              placeholder="••••••••"
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary outline-none transition"
              required
            >
          </div>

          <div class="flex gap-3 pt-4">
            <button 
              type="button" 
              id="btnCancelAuth" 
              class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-3 rounded-lg font-semibold transition duration-200"
            >
              Batal
            </button>
            <button 
              type="submit" 
              class="flex-1 bg-primary hover-primary text-white px-4 py-3 rounded-lg font-semibold transition duration-200 flex items-center justify-center gap-2"
            >
              <i class="fas fa-check-circle"></i>
              Proses Peminjaman
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- ========================== -->
    <!-- Modal: Struk -->
    <!-- ========================== -->
    <div id="receiptModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
      <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl mx-4 overflow-hidden">
        <div id="receiptContent" class="p-8"></div>

        <div class="bg-gray-100 p-6 flex gap-3 border-t">
          <button 
            id="btnPrintReceipt" 
            class="flex-1 bg-primary hover-primary text-white px-6 py-3 rounded-lg font-semibold transition duration-200 flex items-center justify-center gap-2"
          >
            <i class="fas fa-print"></i> Cetak Struk
          </button>
          <button 
            id="btnCloseReceipt" 
            class="flex-1 bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg font-semibold transition duration-200 flex items-center justify-center gap-2"
          >
            <i class="fas fa-times"></i> Tutup & Reset
          </button>
        </div>
      </div>
    </div>

  <!-- ============================================ -->
  <!-- JavaScript Logic -->
  <!-- ============================================ -->
  <script src="https://cdn.jsdelivr.net/npm/preline@1.0.0/dist/preline.min.js"></script>
  <script>
    // ============================================
    // Global State
    // ============================================
    let currentBookCode = null;

    // ============================================
    // Elements
    // ============================================
    const scanForm = document.getElementById('scanForm');
    const itemCodeInput = document.getElementById('itemCodeInput');
    const bookInfoSection = document.getElementById('bookInfoSection');
    const btnOpenAuth = document.getElementById('btnOpenAuth');
    const authModal = document.getElementById('authModal');
    const authForm = document.getElementById('authForm');
    const btnCancelAuth = document.getElementById('btnCancelAuth');
    const receiptModal = document.getElementById('receiptModal');
    const btnPrintReceipt = document.getElementById('btnPrintReceipt');
    const btnCloseReceipt = document.getElementById('btnCloseReceipt');

    // ============================================
    // Event: Scan / Cari Buku
    // ============================================
    scanForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const itemCode = itemCodeInput.value.trim();

      if (!itemCode) {
        showPopup('error', 'Kode buku tidak boleh kosong!');
        return;
      }

      try {
        const response = await fetch('/inside/peminjaman/find', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ item_code: itemCode })
        });

        const data = await response.json();

        if (data.success) {
          // ✅ Buku ditemukan dan valid
          currentBookCode = data.book.item_code;
          displayBookInfo(data.book);
          bookInfoSection.classList.remove('hidden');
        } else {
          // ❌ Error dari server
          showPopup('error', data.message);
          resetBookInfo();
        }
      } catch (err) {
        console.error('Error:', err);
        showPopup('error', 'Terjadi kesalahan saat mencari buku.');
      }
    });

    // ============================================
    // Event: Buka Modal Autentikasi
    // ============================================
    btnOpenAuth.addEventListener('click', () => {
      authModal.classList.remove('hidden');
      authModal.classList.add('flex');
      document.getElementById('borrowerNim').focus();
    });

    // ============================================
    // Event: Tutup Modal Autentikasi
    // ============================================
    btnCancelAuth.addEventListener('click', () => {
      authModal.classList.add('hidden');
      authModal.classList.remove('flex');
      authForm.reset();
    });

    // ============================================
    // Event: Submit Autentikasi & Proses Peminjaman
    // ============================================
    authForm.addEventListener('submit', async (e) => {
      e.preventDefault();

      const borrowerNim = document.getElementById('borrowerNim').value.trim();
      const borrowerPassword = document.getElementById('borrowerPassword').value;

      if (!borrowerNim || !borrowerPassword) {
        showPopup('warning', 'NIM dan Password harus diisi!');
        return;
      }

      try {
        const response = await fetch('/inside/api/kiosk/borrow', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            item_code: currentBookCode,
            borrower_nim: borrowerNim,
            borrower_password: borrowerPassword
          })
        });

        const data = await response.json();

        if (data.success) {
          // ✅ Peminjaman berhasil
          authModal.classList.add('hidden');
          authModal.classList.remove('flex');
          authForm.reset();
          
          displayReceipt(data.receipt);
          receiptModal.classList.remove('hidden');
          receiptModal.classList.add('flex');
        } else {
          // ❌ Gagal
          showPopup('error', data.message);
        }
      } catch (err) {
        console.error('Error:', err);
        showPopup('error', 'Terjadi kesalahan saat memproses peminjaman.');
      }
    });

    // ============================================
    // Event: Cetak Struk
    // ============================================
    btnPrintReceipt.addEventListener('click', () => {
      window.print();
    });

    // ============================================
    // Event: Tutup Struk & Reset
    // ============================================
    btnCloseReceipt.addEventListener('click', () => {
      receiptModal.classList.add('hidden');
      receiptModal.classList.remove('flex');
      resetAll();
    });

    // ============================================
    // Function: Display Book Info
    // ============================================
    function displayBookInfo(book) {
      document.getElementById('bookCover').src = book.cover;
      document.getElementById('bookTitle').textContent = book.title;
      document.getElementById('bookAuthor').textContent = book.author;
      document.getElementById('bookYear').textContent = book.publish_year;
      document.getElementById('bookCode').textContent = book.item_code;
    }

    // ============================================
    // Function: Display Receipt (Struk)
    // ============================================
    function displayReceipt(receipt) {
      const receiptHTML = `
        <div class="text-center border-b pb-6 mb-6">
          <h2 class="text-3xl font-bold text-gray-800 mb-2">✅ Peminjaman Berhasil</h2>
          <p class="text-gray-600">Struk Peminjaman Buku</p>
        </div>

        <div class="flex gap-6 mb-6">
          <!-- Cover -->
          <div class="flex-shrink-0">
            <img src="${receipt.cover}" alt="Cover" class="w-40 h-56 object-cover rounded-lg shadow-lg border-2 border-gray-200">
          </div>

          <!-- Detail Buku -->
          <div class="flex-1">
            <h3 class="text-2xl font-bold text-gray-800 mb-4">${receipt.book_title}</h3>
            
            <div class="space-y-3 text-gray-700">
              <div class="flex">
                <span class="font-semibold w-32">Penulis:</span>
                <span>${receipt.author}</span>
              </div>
              <div class="flex">
                <span class="font-semibold w-32">Peminjam:</span>
                <span>${receipt.member_name}</span>
              </div>
              <div class="flex">
                <span class="font-semibold w-32">NIM:</span>
                <span>${receipt.member_id}</span>
              </div>
              <div class="flex">
                <span class="font-semibold w-32">Pustakawan:</span>
                <span>${receipt.librarian_name}</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Tanggal -->
        <div class="bg-blue-50 rounded-lg p-6 border-2 border-blue-200">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm text-gray-600 mb-1">Tanggal Pinjam</p>
              <p class="text-xl font-bold text-blue-600">${formatDate(receipt.loan_date)}</p>
            </div>
            <div>
              <p class="text-sm text-gray-600 mb-1">Jatuh Tempo</p>
              <p class="text-xl font-bold text-red-600">${formatDate(receipt.due_date)}</p>
            </div>
          </div>
        </div>

        <div class="mt-6 text-center text-sm text-gray-500">
          <p>Harap kembalikan buku tepat waktu.</p>
          <p>Keterlambatan pengembalian akan dikenakan sanksi.</p>
        </div>
      `;

      document.getElementById('receiptContent').innerHTML = receiptHTML;
    }

    // ============================================
    // Function: Reset Book Info
    // ============================================
    function resetBookInfo() {
      currentBookCode = null;
      bookInfoSection.classList.add('hidden');
      document.getElementById('bookCover').src = '/images/buku.png';
      document.getElementById('bookTitle').textContent = '-';
      document.getElementById('bookAuthor').textContent = '-';
      document.getElementById('bookYear').textContent = '-';
      document.getElementById('bookCode').textContent = '-';
    }

    // ============================================
    // Function: Reset All
    // ============================================
    function resetAll() {
      scanForm.reset();
      authForm.reset();
      resetBookInfo();
      itemCodeInput.focus();
    }

    // ============================================
    // Function: Show Popup
    // ============================================
    function showPopup(type, message) {
      const icons = {
        success: '✅',
        error: '❌',
        warning: '⚠️',
        info: 'ℹ️'
      };

      const colors = {
        success: 'bg-green-100 border-green-500 text-green-800',
        error: 'bg-red-100 border-red-500 text-red-800',
        warning: 'bg-yellow-100 border-yellow-500 text-yellow-800',
        info: 'bg-blue-100 border-blue-500 text-blue-800'
      };

      const popup = document.createElement('div');
      popup.className = `fixed top-4 right-4 ${colors[type]} border-l-4 rounded-lg shadow-lg p-4 max-w-md z-50 animate-slide-in`;
      popup.innerHTML = `
        <div class="flex items-start gap-3">
          <span class="text-2xl">${icons[type]}</span>
          <div class="flex-1">
            <p class="font-semibold mb-1">${type.charAt(0).toUpperCase() + type.slice(1)}</p>
            <p class="text-sm">${message}</p>
          </div>
          <button onclick="this.parentElement.parentElement.remove()" class="text-gray-500 hover:text-gray-700">
            <i class="fas fa-times"></i>
          </button>
        </div>
      `;

      document.body.appendChild(popup);

      // Auto remove after 5 seconds
      setTimeout(() => {
        if (popup.parentElement) {
          popup.remove();
        }
      }, 5000);
    }

    // ============================================
    // Function: Format Date
    // ============================================
    function formatDate(dateStr) {
      const date = new Date(dateStr);
      const options = { 
        weekday: 'long', 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
      };
      return date.toLocaleDateString('id-ID', options);
    }

    // ============================================
    // Print Styling
    // ============================================
    const style = document.createElement('style');
    style.textContent = `
      @media print {
        body * {
          visibility: hidden;
        }
        #receiptContent, #receiptContent * {
          visibility: visible;
        }
        #receiptContent {
          position: absolute;
          left: 0;
          top: 0;
          width: 100%;
        }
      }

      @keyframes slide-in {
        from {
          transform: translateX(100%);
          opacity: 0;
        }
        to {
          transform: translateX(0);
          opacity: 1;
        }
      }

      .animate-slide-in {
        animation: slide-in 0.3s ease-out;
      }
    `;
    document.head.appendChild(style);
  </script>

</body>
</html>