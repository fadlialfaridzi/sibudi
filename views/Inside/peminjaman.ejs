<%- include('../partials/header', { title }) %>
<%- include('../partials/navbar') %>

<div class="max-w-2xl mx-auto bg-white shadow-md rounded-2xl p-6 mt-8">
  <h2 class="text-2xl font-semibold text-green-700 mb-4">Peminjaman Buku</h2>

  <form action="/peminjaman/find" method="POST" class="flex gap-2 mb-4">
    <input type="text" name="item_code" placeholder="Masukkan atau scan kode buku"
           class="flex-1 border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-400 outline-none"
           required />
    <button class="bg-green-700 text-white px-4 py-2 rounded-lg hover:bg-green-800 transition">Cari</button>
  </form>

  <% if (book) { %>
  <div class="border-t pt-4">
    <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= book.title %></h3>
    <p class="text-gray-600"><b>Penulis:</b> <%= book.author %></p>
    <p class="text-gray-600 mb-4"><b>Penerbit:</b> <%= book.publisher %></p>

    <form action="/peminjaman/borrow" method="POST" class="space-y-3">
      <input type="hidden" name="item_code" value="<%= book.item_code %>" />
      <input type="text" name="nim" placeholder="Masukkan NIM"
             class="w-full border px-3 py-2 rounded-lg" required />
      <input type="password" name="password" placeholder="Masukkan Password"
             class="w-full border px-3 py-2 rounded-lg" required />
      <button class="w-full bg-green-700 text-white py-3 rounded-lg font-semibold hover:bg-green-800 transition">
        Pinjam Buku
      </button>
    </form>
  </div>
  <% } %>
</div>

<%- include('../outside/popup', { popup }) %>
