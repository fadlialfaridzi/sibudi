<%- include('partials/header-simple', { title: 'SIBUDI - Reset Password' }) %>

<body class="min-h-screen bg-white">
  <!-- Wrapper: center content -->
  <main class="flex min-h-screen items-center justify-center px-4 py-10">
    <!-- Card -->
    <div class="w-full max-w-3xl grid grid-cols-1 md:grid-cols-2 rounded-3xl overflow-hidden shadow-2xl bg-white/80 backdrop-blur-lg ring-1 ring-black/5">
      <!-- Left: form -->
      <section class="p-8 md:p-12">
        <!-- Brand -->
        <div class="mb-8 text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight text-green-800">
            Reset Password
          </h1>
          <p class="mt-2 text-sm md:text-base text-gray-600">
            Masukkan password baru untuk akun Anda
          </p>
        </div>

        <% if (token) { %>
        <!-- Form Reset Password -->
        <form action="/reset-password/<%= token %>" method="post" class="space-y-6">
          <!-- Password Baru -->
          <div class="space-y-2">
            <label for="password" class="block text-sm font-medium text-gray-800">Password Baru</label>
            <div class="relative"
                 data-hs-toggle-password='{"target":"#password","defaultClass":"fa-eye","showClass":"fa-eye-slash"}'>
              <input
                id="password"
                name="password"
                type="password"
                placeholder="Minimal 6 karakter"
                required
                minlength="6"
                class="hs-input w-full rounded-full border-gray-300 px-6 py-3.5 pr-12 text-gray-900 placeholder:text-gray-400 focus:border-green-600 focus:ring-green-600/40"
              />
              <button
                type="button"
                class="hs-toggle-password absolute inset-y-0 right-4 my-auto inline-flex size-9 items-center justify-center rounded-full text-gray-600 hover:text-green-700 focus:outline-none"
                aria-label="Tampilkan/Sembunyikan Password">
                <i class="fa-solid fa-eye text-lg"></i>
              </button>
            </div>
          </div>

          <!-- Konfirmasi Password -->
          <div class="space-y-2">
            <label for="confirmPassword" class="block text-sm font-medium text-gray-800">Konfirmasi Password</label>
            <div class="relative"
                 data-hs-toggle-password='{"target":"#confirmPassword","defaultClass":"fa-eye","showClass":"fa-eye-slash"}'>
              <input
                id="confirmPassword"
                name="confirmPassword"
                type="password"
                placeholder="Ulangi password baru"
                required
                minlength="6"
                class="hs-input w-full rounded-full border-gray-300 px-6 py-3.5 pr-12 text-gray-900 placeholder:text-gray-400 focus:border-green-600 focus:ring-green-600/40"
              />
              <button
                type="button"
                class="hs-toggle-password absolute inset-y-0 right-4 my-auto inline-flex size-9 items-center justify-center rounded-full text-gray-600 hover:text-green-700 focus:outline-none"
                aria-label="Tampilkan/Sembunyikan Password">
                <i class="fa-solid fa-eye text-lg"></i>
              </button>
            </div>
          </div>

          <!-- Password Requirements -->
          <div class="bg-blue-50 border border-blue-200 rounded-2xl p-4">
            <div class="flex items-start gap-3">
              <i class="fa-solid fa-lock text-blue-600 text-lg mt-0.5"></i>
              <div class="text-sm text-gray-700">
                <p class="font-medium text-blue-800 mb-1">Syarat Password:</p>
                <ul class="space-y-1 text-xs">
                  <li>• Minimal 6 karakter</li>
                  <li>• Gunakan kombinasi huruf dan angka</li>
                  <li>• Hindari password yang mudah ditebak</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Submit -->
          <button
            type="submit"
            class="w-full inline-flex items-center justify-center gap-2 rounded-full bg-green-700 px-6 py-3.5 text-white text-sm font-semibold tracking-wide hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 active:scale-[0.98] transition">
            <i class="fa-solid fa-check-circle"></i>
            RESET PASSWORD
          </button>
        </form>
        <% } else { %>
        <!-- Token Invalid/Expired -->
        <div class="text-center space-y-6">
          <div class="bg-red-50 border border-red-200 rounded-2xl p-6">
            <i class="fa-solid fa-circle-xmark text-red-500 text-5xl mb-4"></i>
            <h3 class="text-lg font-semibold text-red-800 mb-2">Link Tidak Valid</h3>
            <p class="text-sm text-gray-600">
              Link reset password tidak valid atau sudah kedaluwarsa.
            </p>
          </div>
          
          <div class="space-y-3">
            <a href="/lupa-password" 
               class="w-full inline-flex items-center justify-center gap-2 rounded-full bg-green-700 px-6 py-3.5 text-white text-sm font-semibold tracking-wide hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-600 active:scale-[0.98] transition">
              <i class="fa-solid fa-redo"></i>
              Kirim Ulang Link Reset
            </a>
            
            <a href="/login" 
               class="w-full inline-flex items-center justify-center gap-2 rounded-full border-2 border-gray-300 px-6 py-3.5 text-gray-700 text-sm font-semibold tracking-wide hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400 active:scale-[0.98] transition">
              <i class="fa-solid fa-arrow-left"></i>
              Kembali ke Login
            </a>
          </div>
        </div>
        <% } %>
      </section>

      <!-- Right: image -->
      <aside class="relative hidden md:block md:min-h-[520px]">
        <img
          src="/images/Perpustakaan Unand.jpg"
          alt="Universitas Andalas"
          class="absolute inset-0 w-full h-full object-cover"
          loading="lazy"
          decoding="async"
        />
        <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-green-800/40 to-transparent"></div>
        
        <!-- Overlay Text -->
        <div class="absolute inset-0 flex flex-col items-center justify-center text-white p-8">
          <div class="text-center space-y-4">
            <i class="fa-solid fa-key text-6xl opacity-90"></i>
            <h2 class="text-2xl font-bold">Password Baru</h2>
            <p class="text-sm opacity-90 max-w-xs">
              Buat password yang kuat untuk melindungi akun Anda
            </p>
          </div>
        </div>
      </aside>
    </div>
  </main>

  <!-- Popup partial -->
  <%- include('partials/popup') %>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script src="/js/popup.js"></script>
  
  <!-- Password Match Validation -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.querySelector('form');
      if (form) {
        form.addEventListener('submit', function(e) {
          const password = document.getElementById('password').value;
          const confirmPassword = document.getElementById('confirmPassword').value;
          
          if (password !== confirmPassword) {
            e.preventDefault();
            alert('Password dan Konfirmasi Password tidak sama!');
            return false;
          }
        });
      }
    });
  </script>
</body>
</html>
